  "version": "0.2.0",
  "configurations": [
   {
     "console": "integratedTerminal",
     "internalConsoleOptions": "neverOpen",
     "name": "nodemon",
     "program": "src/index.ts",
     "request": "launch",
     "restart": true,
     "runtimeExecutable": "nodemon",
     "skipFiles": [
       "<node_internals>/**"
     ],
     "type": "pwa-node",
     "env": {
       "NODE_ENV": "dev",
       "MONGO_USER": "admin",
       "MONGO_PASSWORD": "initial",
       "MONGO_DATABASE": "vendas"
     }
   }
  ]
}